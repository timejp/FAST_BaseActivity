    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/txtNo"
        android:layout_weight="0.5"
        android:gravity="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/txtDay"
        android:layout_weight="0.5"
        android:gravity="center" />
</LinearLayout>